<Window x:Class="RacingAidWpf.View.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewModel="clr-namespace:RacingAidWpf.ViewModel"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance viewModel:MainWindowViewModel}"
        Closed="MainWindow_OnClosed"
        SizeToContent="WidthAndHeight"
        Title="Racing Aid">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <StackPanel Grid.Row="0" Grid.ColumnSpan="3" HorizontalAlignment="Right" Margin="5" Orientation="Horizontal">
            <ComboBox Height="25" Width="150"
                      ItemsSource="{Binding SimulatorEntryCollection}"
                      SelectedValue="{Binding SelectedSimulatorEntry}"
                      DisplayMemberPath="SimulatorName"/>
            <Button x:Name="StartButton"
                    Height="25" Width="50"
                    Margin="10,0,0,0"
                    Content="Start"
                    Command="{Binding StartCommand}"
                    IsEnabled="{Binding IsStopped}"/>
            <Button x:Name="StopButton"
                    Height="25" Width="50"
                    Margin="10,0,0,0"
                    Content="Stop"
                    Command="{Binding StopCommand}"
                    IsEnabled="{Binding IsStarted}"/>
        </StackPanel>
        
        <GroupBox Grid.Row="1" Grid.Column="0" Header="General">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition/>
                    <ColumnDefinition/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition/>
                    <RowDefinition/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Column="0" Grid.Row="0"
                           VerticalAlignment="Center" Margin="2,0"
                           Text="Primary Screen"/>
                <ComboBox Grid.Column="1" Grid.Row="0"
                          Height="25" Width="50" Margin="2,0"
                          ItemsSource="{Binding Screens}"
                          SelectedValue="{Binding SelectedPrimaryScreen}"/>
                
                <TextBlock Grid.Column="0" Grid.Row="1"
                           VerticalAlignment="Center" Margin="2,0"
                           Text="Update Interval (ms)"/>
                <TextBox Grid.Column="1" Grid.Row="1"
                         VerticalAlignment="Center" VerticalContentAlignment="Center" Height="25" Margin="2,0"
                         Text="{Binding UpdateIntervalMs}"/> 
            </Grid>
        </GroupBox>
        
        <GroupBox Grid.Row="1" Grid.Column="1" Header="Timesheet">
            <StackPanel Orientation="Vertical">
                <CheckBox Content="Display Car Number" IsChecked="{Binding DisplayCarNumber}"/>
                <CheckBox Content="Display Safety Rating" IsChecked="{Binding DisplaySafetyRating}"/>
                <CheckBox Content="Display Skill Rating" IsChecked="{Binding DisplaySkillRating}"/>
                <CheckBox Content="Display Fastest Lap" IsChecked="{Binding DisplayFastestLap}"/>
                <CheckBox Content="Display Last Lap" IsChecked="{Binding DisplayLastLap}"/>
                <CheckBox Content="Display Gap To Leader" IsChecked="{Binding DisplayGapToLeader}"/>
            </StackPanel>
        </GroupBox>
        
        <GroupBox Grid.Row="1" Grid.Column="2" Header="Telemetry">
            <StackPanel Orientation="Vertical">
                <CheckBox Content="Use Metric Units" IsChecked="{Binding UseMetricUnits}"/>
            </StackPanel>
        </GroupBox>
    </Grid>
</Window>
